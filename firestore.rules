rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User-owned data: user can read/write only their subtree
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Community feed is write-only via server (Cloud Functions with Admin SDK bypass rules)
    match /community/{postId} {
      allow read: if true;
      // All client writes are denied; creation and updates happen via Cloud Functions
      allow create, update, delete: if false;
    }
  }
}
